---
apiVersion: kustomize.toolkit.fluxcd.io/v1beta1
kind: Kustomization
metadata:
  name: gitops
  namespace: flux-system
spec:
  interval: 30s
  sourceRef:
    kind: GitRepository
    name: flux-system
  path: ./eksctl-clusters/apps/gitops
  prune: true
  validation: client
  postBuild:
    substitute:
      USERNAME: ${USERNAME}
      PASSWORDHASH: ${PASSWORDHASH}
      CLUSTER_NAME: ${CLUSTER_NAME}
      REPOSITORY: ${REPOSITORY}
      TAG: ${TAG}
