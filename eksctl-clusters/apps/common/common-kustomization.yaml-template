---
apiVersion: kustomize.toolkit.fluxcd.io/v1beta1
kind: Kustomization
metadata:
  name: common
  namespace: flux-system
spec:
  interval: 30s
  sourceRef:
    kind: GitRepository
    name: flux-system
  path: ./eksctl-clusters/apps/common
  prune: true
  validation: client
  postBuild:
    substitute:
      CLUSTER_NAME: ${CLUSTER_NAME}
      SSL_CERTIFICATE_ARN: ${SSL_CERTIFICATE_ARN}
